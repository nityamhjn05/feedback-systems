# Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/feedbackDB?retryWrites=true&w=majority

# JWT Secret (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here

# Server Port
PORT=5000

# Email Service Configuration
EMAIL_SERVICE=sendgrid

# SendGrid API Key (get from https://sendgrid.com)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Email From Address (must be verified in SendGrid)
EMAIL_FROM="Your App Name <noreply@yourdomain.com>"

# Frontend URL (for reset links and form links)
# Local: http://localhost:3000
# Production: https://your-app.onrender.com
FRONTEND_URL=http://localhost:3000

# Node Environment (development or production)
NODE_ENV=development
